package cse360assignment02;

public class AddingMachine  // initialization of the class AddingMachine 
{
  private int total; // initialising a private integer variable total.
  
  public AddingMachine ()  // public class Adding Machine()
  {
    total = 0;  // not needed - included for clarity
  }
  
  public int getTotal ()   This public class  gets the current total value 
  {
    return total; // return total value.
  }
  
  public void add (int value)  // this public class takes in the parameter value and adds it to the total. 
  {
       total=total+value; // the total value is updated value times in this line.
  }

  public void subtract (int value) // this public class takes in value paramater and subracts the value from total.
  {
     total=total-value; 
  
  }

  public String toString () 
  {
    return "";
  }

  public void clear()
  {
      
  
  }
}